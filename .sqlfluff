[sqlfluff]
dialect = snowflake
templater = jinja

[sqlfluff:indentation]
tab_space_size = 4
indent_unit = space

[sqlfluff:rules]
exclude_rules = layout.indent  # instead of L004

[sqlfluff:rules:layout.indent]
keywords =
    ALL,
    ALTER,
    AND,
    ANY,
    AS,
    ASC,
    BETWEEN,
    WITH,
    ICEBERG
